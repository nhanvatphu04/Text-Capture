/* Dark Theme Stylesheet for Qt Application */

/* Font Loading and Configuration */
@font-face {
    font-family: "JetBrains Mono";
    src: url(":/src/resources/fonts/JetBrainsMono-Regular.ttf");
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: "JetBrains Mono";
    src: url(":/src/resources/fonts/JetBrainsMono-Bold.ttf");
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: "JetBrains Mono";
    src: url(":/src/resources/fonts/JetBrainsMono-Italic.ttf");
    font-weight: normal;
    font-style: italic;
}

@font-face {
    font-family: "JetBrains Mono";
    src: url(":/src/resources/fonts/JetBrainsMono-Light.ttf");
    font-weight: 300;
    font-style: normal;
}

@font-face {
    font-family: "JetBrains Mono";
    src: url(":/src/resources/fonts/JetBrainsMono-Medium.ttf");
    font-weight: 500;
    font-style: normal;
}

/* Global Application Style */
QApplication {
    background-color: #2b2b2b;
    color: #ffffff;
}

/* Main Window */
QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
    border: none;
    font-family: "JetBrains Mono", "Consolas", "Monaco", "Courier New", monospace;
    font-size: 9pt;
}

/* Window Title Bar */
QMainWindow::title {
    background-color: #1e1e1e;
    color: #ffffff;
    padding: 5px;
    border: none;
}

/* Buttons */
QPushButton {
    background-color: #404040;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    font-weight: 500;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #505050;
    border: 1px solid #666666;
}

QPushButton:pressed {
    background-color: #303030;
    border: 1px solid #444444;
}

QPushButton:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #3a3a3a;
}

/* Disabled Button Class */
QPushButton[class="disabled"] {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #3a3a3a;
}

QPushButton[class="disabled"]:hover {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #3a3a3a;
}

QPushButton[class="disabled"]:pressed {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #3a3a3a;
}

/* Toggle Button Styles */
QPushButton[class="toggle"] {
    background-color: #404040;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    font-weight: 500;
    min-height: 20px;
}

QPushButton[class="toggle"]:hover {
    background-color: #505050;
    border: 1px solid #666666;
}

QPushButton[class="toggle"]:pressed {
    background-color: #303030;
    border: 1px solid #444444;
}

/* Toggle Button Active State */
QPushButton[class="toggle"][active="true"] {
    background-color: #4CAF50;
    color: white;
    border: 2px solid #45a049;
    font-weight: bold;
}

QPushButton[class="toggle"][active="true"]:hover {
    background-color: #45a049;
    border: 2px solid #3d8b40;
}

QPushButton[class="toggle"][active="true"]:pressed {
    background-color: #3d8b40;
    border: 2px solid #2e7d32;
}

/* Case Format Toggle Buttons (mutually exclusive) */
QPushButton[class="case-toggle"] {
    background-color: #404040;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    font-weight: 500;
    min-height: 20px;
}

QPushButton[class="case-toggle"]:hover {
    background-color: #505050;
    border: 1px solid #666666;
}

QPushButton[class="case-toggle"]:pressed {
    background-color: #303030;
    border: 1px solid #444444;
}

QPushButton[class="case-toggle"][active="true"] {
    background-color: #2196F3;
    color: white;
    border: 2px solid #1976D2;
    font-weight: bold;
}

QPushButton[class="case-toggle"][active="true"]:hover {
    background-color: #1976D2;
    border: 2px solid #1565C0;
}

QPushButton[class="case-toggle"][active="true"]:pressed {
    background-color: #1565C0;
    border: 2px solid #0D47A1;
}

/* Decorative Format Toggle Buttons (independent) */
QPushButton[class="decorative-toggle"] {
    background-color: #404040;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    font-weight: 500;
    min-height: 20px;
}

QPushButton[class="decorative-toggle"]:hover {
    background-color: #505050;
    border: 1px solid #666666;
}

QPushButton[class="decorative-toggle"]:pressed {
    background-color: #303030;
    border: 1px solid #444444;
}

QPushButton[class="decorative-toggle"][active="true"] {
    background-color: #FF9800;
    color: white;
    border: 2px solid #F57C00;
    font-weight: bold;
}

QPushButton[class="decorative-toggle"][active="true"]:hover {
    background-color: #F57C00;
    border: 2px solid #E65100;
}

QPushButton[class="decorative-toggle"][active="true"]:pressed {
    background-color: #E65100;
    border: 2px solid #BF360C;
}

/* Primary Button */
QPushButton[class="primary"] {
    background-color: #0078d4;
    border: 1px solid #0078d4;
}

QPushButton[class="primary"]:hover {
    background-color: #106ebe;
    border: 1px solid #106ebe;
}

QPushButton[class="primary"]:pressed {
    background-color: #005a9e;
    border: 1px solid #005a9e;
}

/* Text Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 6px 8px;
    selection-background-color: #0078d4;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #0078d4;
    background-color: #252525;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #3a3a3a;
}

/* Combo Box */
QComboBox {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 6px 8px;
    min-height: 20px;
}

QComboBox:hover {
    border: 1px solid #666666;
    background-color: #252525;
}

QComboBox:focus {
    border: 2px solid #0078d4;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #ffffff;
    margin-right: 5px;
}

QComboBox QAbstractItemView {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    selection-background-color: #0078d4;
}

/* List Widgets */
QListWidget, QTreeWidget, QTableWidget {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    gridline-color: #3a3a3a;
    outline: none;
}

QListWidget::item, QTreeWidget::item, QTableWidget::item {
    padding: 4px;
    border: none;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #404040;
}

/* Scrollbars */
QScrollBar:vertical {
    background-color: #2b2b2b;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #555555;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #666666;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #2b2b2b;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #555555;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #666666;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Menu Bar */
QMenuBar {
    background-color: #1e1e1e;
    color: #ffffff;
    border-bottom: 1px solid #555555;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 10px;
}

QMenuBar::item:selected {
    background-color: #404040;
}

QMenuBar::item:pressed {
    background-color: #303030;
}

/* Menus */
QMenu {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #555555;
    padding: 4px;
}

QMenu::item {
    padding: 6px 20px;
    border-radius: 2px;
}

QMenu::item:selected {
    background-color: #0078d4;
}

QMenu::separator {
    height: 1px;
    background-color: #555555;
    margin: 4px 0px;
}

/* Toolbar */
QToolBar {
    background-color: #1e1e1e;
    border: none;
    spacing: 2px;
    padding: 2px;
}

QToolBar::handle {
    background-color: #555555;
    width: 1px;
    margin: 2px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 4px;
    margin: 1px;
}

QToolButton:hover {
    background-color: #404040;
    border: 1px solid #666666;
}

QToolButton:pressed {
    background-color: #303030;
    border: 1px solid #444444;
}

/* Status Bar */
QStatusBar {
    background-color: #1e1e1e;
    color: #ffffff;
    border-top: 1px solid #555555;
}

QStatusBar::item {
    border: none;
}

/* Progress Bar */
QProgressBar {
    background-color: #1e1e1e;
    border: 1px solid #555555;
    border-radius: 4px;
    text-align: center;
    color: #ffffff;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 3px;
}

/* Slider */
QSlider::groove:horizontal {
    background-color: #1e1e1e;
    border: 1px solid #555555;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #0078d4;
    border: 1px solid #0078d4;
    width: 16px;
    border-radius: 8px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #106ebe;
}

/* Checkbox */
QCheckBox {
    spacing: 8px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #555555;
    border-radius: 3px;
    background-color: #1e1e1e;
}

